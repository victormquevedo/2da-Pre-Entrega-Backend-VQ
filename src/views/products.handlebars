{{#with user}}
<nav>
    <div class="brand-logo-container">
        <span>Quevedo PetShop</span>
    </div>
    <a class="user-container" href="/views/profile">
        <div>
            <img class='user-profile-picture' src="data:image/png;base64," alt="user-logo-default">
        </div>
        <span>{{firstName}}</span>
    </a>
</nav>
{{/with}}
{{#if user.firstName}}<h2 class="welcome-message">{{user.firstName}}, Bienvenido/a A La Tienda De Quevedo PetShop!</h2>{{/if}}



<h2 class="title">PRODUCTOS</h2>
{{#if products.length}}
<div class='product-container'>
{{#each products}}
    <div class='product'>
        <div class="product-img-container">
            <img src={{thumbnail}} alt={{title}}>
        </div>
        <div class="product-info-container">
            <h3 class="product-title">{{title}}</h3>
            <span class="product-id">ID: {{_id}}</span>
            <span class="product-category">*{{category}}</span>
            <span class="product-price">${{price}}</span>
            <span class="product-stock">Disponibles: {{stock}}</span>
            <button class="product-cart-button">Agregar al carrito</button>
        </div>
    </div>
{{/each}}
</div>
{{else}}
<h2>No hay productos para mostrar.</h2>
{{/if}}
<p><strong>*Actualice para mostrar cambios</strong></p>